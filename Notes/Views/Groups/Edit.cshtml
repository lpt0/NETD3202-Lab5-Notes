@model Notes.Models.Group

@{
    /** Edit.cshtml
     *
     * This page allows a user to edit the name and, optionally, the 
     * description of a group. It also includes a delete button, if the user
     * wishes to (try to) delete the group.
     * 
     * Author: Haran
     * Date: December 6th, 2020
     */
    // use the group name in the title
    ViewData["Title"] = $"Edit group \"{Model.Name}\"";
}

<!-- Same as title -->
<h1>@ViewData["Title"]</h1>

<div>
    <!-- Same size as create page -->
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- Outlined button, for consistency -->
                <input type="submit" value="Save" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
    <!-- Delete button, just in case -->
    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
